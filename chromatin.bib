  pages = {15912-15917},
  file = {/home/bbeltr1/Documents/paper-collection/SchererN/Iyer-Biswas et al_2014_Scaling laws governing stochastic growth and division of single bacterial cells.pdf;/home/bbeltr1/Documents/zotero/storage/I4S4C7QB/15912.html},
